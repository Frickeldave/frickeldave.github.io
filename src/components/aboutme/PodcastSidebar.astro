---
import { ScrollArea } from "@components/common/shortcodes/ScrollArea";
import { FaFilter, FaCalendar, FaHashtag } from "react-icons/fa";

interface Props {
  editions: string[];
  totalEpisodes: number;
}

const { editions, totalEpisodes } = Astro.props;
---

<ScrollArea className="h-full w-full" client:only="react">
  <!-- Results Count -->
  <div
    class="glass m-2 mb-4 rounded-lg p-4 opacity-0 intersect:animate-fadeLeft"
  >
    <div class="text-sm opacity-80" id="results-count">
      {totalEpisodes} von {totalEpisodes} Episoden
    </div>
  </div>

  <!-- Search -->
  <div
    class="glass m-2 mb-4 rounded-lg p-4 opacity-0 intersect:animate-fadeLeft"
  >
    <div>
      <h4 class="mb-2">
        <FaFilter className={"-mt-1.5 mr-1 inline-block text-amber-500"} />
        Suche
      </h4>
      <hr class="-mt-1 mb-2 border-amber-500/30" />
      <input
        type="text"
        id="search-input"
        placeholder="Titel oder Teilnehmer..."
        class="w-full rounded-lg border border-amber-500/20 bg-white/10 px-3 py-2 text-sm transition-colors focus:border-amber-500/60 focus:outline-none"
      />
    </div>
  </div>

  <!-- Editions (Categories) -->
  <div
    class="glass m-2 mb-4 rounded-lg p-4 opacity-0 intersect:animate-fadeLeft"
  >
    <div>
      <h4 class="mb-2">
        <FaHashtag className={"-mt-1.5 mr-1 inline-block text-amber-500"} />
        Edition
      </h4>
      <hr class="-mt-1 mb-2 border-amber-500/30" />
      <ul class="space-y-2" id="edition-filters">
        {
          editions.map((edition) => (
            <li>
              <button
                class="edition-filter glass-t w-full rounded-lg px-3 py-1.5 text-left text-sm transition-all hover:bg-white/20"
                data-edition={edition}
              >
                {edition}
              </button>
            </li>
          ))
        }
      </ul>
    </div>
  </div>

  <!-- Date Filter -->
  <div
    class="glass m-2 mb-4 rounded-lg p-4 opacity-0 intersect:animate-fadeLeft"
  >
    <div>
      <h4 class="mb-2">
        <FaCalendar className={"-mt-1.5 mr-1 inline-block text-amber-500"} />
        Zeitraum
      </h4>
      <hr class="-mt-1 mb-2 border-amber-500/30" />
      <select
        id="date-filter"
        class="w-full rounded-lg border border-white/20 bg-white/10 px-3 py-2 text-sm transition-colors focus:border-white/40 focus:outline-none dark:bg-gray-800 dark:text-white dark:[&>option]:bg-gray-800 dark:[&>option]:text-white"
      >
        <option value="all">Alle Episoden</option>
        <option value="2026">2026</option>
        <option value="2025">2025</option>
        <option value="2024">2024</option>
      </select>
    </div>
  </div>

  <!-- Clear Filters -->
  <div class="glass m-2 rounded-lg p-4 opacity-0 intersect:animate-fadeLeft">
    <button
      id="clear-filters"
      class="w-full rounded-lg bg-gradient-to-r from-amber-500 to-orange-500 px-3 py-2 text-sm font-medium text-white transition-all duration-300 hover:scale-105 hover:from-amber-600 hover:to-orange-600"
    >
      Filter zur√ºcksetzen
    </button>
  </div>
</ScrollArea>
