---
import { ScrollArea } from "@components/common/shortcodes/ScrollArea";
import { FaFilter } from "react-icons/fa";

interface Props {
  totalDownloads: number;
}

const { totalDownloads } = Astro.props;
---

<ScrollArea className="h-full w-full" client:only="react">
  <!-- Results Count -->
  <div
    class="glass rounded-lg p-4 m-2 mb-4 intersect:animate-fadeLeft opacity-0"
  >
    <div class="text-sm opacity-80" id="results-count">
      {totalDownloads} von {totalDownloads} Downloads
    </div>
  </div>

  <!-- Search -->
  <div
    class="glass rounded-lg p-4 m-2 mb-4 intersect:animate-fadeLeft opacity-0"
  >
    <div>
      <h4 class="mb-2">
        <FaFilter className={"mr-1 -mt-1.5 inline-block text-green-500"} />
         Suche
      </h4>
      <hr class="mb-2 -mt-1 border-green-500/30" />
      <input
        type="text"
        id="search-input"
        placeholder="Suche nach Downloads..."
        class="w-full px-3 py-2 rounded-lg bg-white/10 border border-green-500/20 focus:border-green-500/60 focus:outline-none transition-colors text-sm"
      />
    </div>
  </div>

  <!-- Clear Filters -->
  <div
    class="glass rounded-lg p-4 m-2 mb-4 intersect:animate-fadeLeft opacity-0"
  >
    <button
      id="clear-filters"
      class="w-full px-4 py-2 bg-gradient-to-r from-green-500 to-lime-500 hover:from-green-600 hover:to-lime-600 text-white font-medium rounded-lg text-sm transition-all duration-300 hover:scale-105"
    >
      Filter zur√ºcksetzen
    </button>
  </div>
</ScrollArea>
