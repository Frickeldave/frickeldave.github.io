---
import { ScrollArea } from "@components/common/shortcodes/ScrollArea";
import { FaFilter } from "react-icons/fa";

interface Props {
  totalDownloads: number;
}

const { totalDownloads } = Astro.props;
---

<ScrollArea className="h-full w-full" client:only="react">
  <!-- Results Count -->
  <div
    class="glass m-2 mb-4 rounded-lg p-4 opacity-0 intersect:animate-fadeLeft"
  >
    <div class="text-sm opacity-80" id="results-count">
      {totalDownloads} von {totalDownloads} Downloads
    </div>
  </div>

  <!-- Search -->
  <div
    class="glass m-2 mb-4 rounded-lg p-4 opacity-0 intersect:animate-fadeLeft"
  >
    <div>
      <h4 class="mb-2">
        <FaFilter className={"-mt-1.5 mr-1 inline-block text-green-500"} />
        Suche
      </h4>
      <hr class="-mt-1 mb-2 border-green-500/30" />
      <input
        type="text"
        id="search-input"
        placeholder="Suche nach Downloads..."
        class="w-full rounded-lg border border-green-500/20 bg-white/10 px-3 py-2 text-sm transition-colors focus:border-green-500/60 focus:outline-none"
      />
    </div>
  </div>

  <!-- Clear Filters -->
  <div
    class="glass m-2 mb-4 rounded-lg p-4 opacity-0 intersect:animate-fadeLeft"
  >
    <button
      id="clear-filters"
      class="w-full rounded-lg bg-gradient-to-r from-green-500 to-lime-500 px-4 py-2 text-sm font-medium text-white transition-all duration-300 hover:scale-105 hover:from-green-600 hover:to-lime-600"
    >
      Filter zur√ºcksetzen
    </button>
  </div>
</ScrollArea>
