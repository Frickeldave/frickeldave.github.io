---
import type { AboutMeEntry } from "@/types";
import { getEntries } from "@lib/contentParser";
import HandmadeGrid from "./HandmadeGrid";

interface Props {
  entry: AboutMeEntry;
}

const { entry } = Astro.props;
const { handmadeProjects = [] } = entry.data;

// Fetch all blog posts to find more DIY/Holzwerken projects
const allBlogPosts = await getEntries("blog");
const blogProjects = allBlogPosts
  .filter((post) => {
    const data = post.data as any;
    return (
      data.categories?.includes("DIY") ||
      data.categories?.includes("Holzwerken")
    );
  })
  .map((post) => {
    const data = post.data as any;
    return {
      title: data.title,
      description: data.description || "",
      image: data.image,
      blogUrl: `/blog/${post.id}`,
      category: data.categories?.includes("Holzwerken") ? "Holzwerken" : "DIY",
    };
  });

// Merge static projects from aboutme index and dynamic projects from blog
// Use a Map to avoid duplicates by title or blogUrl
const projectMap = new Map();

// Add blog projects first (generally more up to date)
blogProjects.forEach((p) => projectMap.set(p.blogUrl, p));
// Add static projects (may overwrite or add new ones)
handmadeProjects.forEach((p) => projectMap.set(p.blogUrl, p));

const combinedProjects = Array.from(projectMap.values());
---

{
  combinedProjects.length > 0 && (
    <div class="row justify-center">
      <div class="col-12">
        <div class="glass rounded-2xl p-6 lg:p-10">
          {/* Section Header */}
          <div class="mb-8 text-center">
            <h2 class="text-txt-h dark:text-darkmode-txt-h mb-3 text-2xl font-bold lg:text-3xl">
