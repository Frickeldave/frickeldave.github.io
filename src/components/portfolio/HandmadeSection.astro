---
import { getCollection } from "astro:content";
import type { AboutMeEntry, BlogEntry } from "@/types";
import HandmadeGrid from "./HandmadeGrid";

interface Props {
  entry: AboutMeEntry;
}

const { entry } = Astro.props;

// Fetch all blog posts
const allBlogPosts = (await getCollection("blog")) as BlogEntry[];

// Define categories we're interested in
const targetCategories = [
  "Holzwerken",
  "Epoxidharz",
  "Laser",
  "3D-Druck",
  "DIY",
];

// Filter and format blog posts for the handmade portfolio
const handmadeBlogProjects = allBlogPosts
  .filter((post) => {
    const categories = post.data.categories?.map((c) => c.toLowerCase()) || [];
    return targetCategories.some((tc) => categories.includes(tc.toLowerCase()));
  })
  .map((post) => {
    // Find the best category to display (priority to more specific ones)
    const displayCategory =
      post.data.categories?.find((c) =>
        ["Holzwerken", "Epoxidharz", "Laser", "3D-Druck"].includes(c)
      ) ||
      post.data.categories?.find((c) => c === "DIY") ||
      "DIY";

    return {
      title: post.data.title,
      description: post.data.description || "",
      image: post.data.image,
      blogUrl: `/blog/${post.id}`,
      category: displayCategory,
    };
  });

// Combine with hardcoded projects if they are not already included (by title)
const existingTitles = new Set(handmadeBlogProjects.map((p) => p.title));
const additionalProjects = (entry.data.handmadeProjects || []).filter(
  (p) => !existingTitles.has(p.title)
);

const allHandmadeProjects = [...handmadeBlogProjects, ...additionalProjects];
---

{
  allHandmadeProjects && allHandmadeProjects.length > 0 && (
    <div class="row justify-center">
      <div class="col-12">
        <div class="glass rounded-2xl p-6 lg:p-10">
          {/* Section Header */}
          <div class="mb-8 text-center">
            <h2 class="text-txt-h dark:text-darkmode-txt-h mb-3 text-2xl font-bold lg:text-3xl">
              ğŸ› ï¸ DIY Projekte
            </h2>
            <p class="mx-auto max-w-2xl text-txt-p opacity-80 dark:text-darkmode-txt-p">
              Hier siehst du eine zufÃ¤llige Auswahl von DIY Projekten aus den
              Bereichen Holzwerken, Laser, Epoxidharz und 3D-Druck.
            </p>
          </div>

          <HandmadeGrid projects={allHandmadeProjects} client:load />
        </div>
      </div>
    </div>
  )
}
