---
import type { AboutMeEntry } from "@/types";
import PublicationsGrid from "./PublicationsGrid";

interface Props {
  entry: AboutMeEntry;
}

const { entry } = Astro.props;
const { publications } = entry.data;

// Transform publications for the grid
const publicationsWithImages = (publications || []).map((pub) => {
  let imageUrl = "/images/placeholder-publication.png";

  if (pub.image) {
    imageUrl = typeof pub.image === "string" ? pub.image : pub.image.src;
  }

  return {
    title: pub.title,
    description: pub.description,
    imageUrl,
    publicationUrl: pub.publicationUrl,
    blogUrl: pub.blogUrl,
    year: pub.year,
    publisher: pub.publisher,
  };
});
---

{
  publicationsWithImages && publicationsWithImages.length > 0 && (
    <div class="row justify-center">
      <div class="col-12">
        <div class="glass rounded-2xl p-6 lg:p-10">
          {/* Section Header */}
          <div class="mb-8 text-center">
            <h2 class="text-txt-h dark:text-darkmode-txt-h mb-3 text-2xl font-bold lg:text-3xl">
