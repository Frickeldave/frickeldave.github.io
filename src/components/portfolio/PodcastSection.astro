---
import { Image } from "astro:assets";
import {
  FaSpotify,
  FaApple,
  FaAmazon,
  FaArrowRight,
  FaMicrophone,
  FaPodcast,
  FaMusic,
} from "react-icons/fa";

// Import the podcast image
import podcastImage from "@assets/doag-voices.png";

// Podcast platforms with their specific colors from the podcast page
const platforms = [
  {
    name: "Spotify",
    url: "https://open.spotify.com/show/5U7lAyly41FMj6IM7OE4OB",
    icon: FaSpotify,
    color: "#1DB954",
  },
  {
    name: "Apple Podcasts",
    url: "https://podcasts.apple.com/de/podcast/doag-voices/id1847181531",
    icon: FaApple,
    color: "#FA57C2",
  },
  {
    name: "Amazon Music",
    url: "https://music.amazon.de/podcasts/5d145588-d877-467e-b3b2-bf3da6bf28cd/doag-voices",
    icon: FaAmazon,
    color: "#FF9900",
  },
  {
    name: "Deezer",
    url: "https://www.deezer.com/de/show/1002294232",
    icon: FaMusic,
    color: "#ED311B",
  },
  {
    name: "Podcast.de",
    url: "https://www.podcast.de/podcast/3651714/doag-voices",
    icon: FaPodcast,
    color: "#0066CC",
  },
  {
    name: "Acast",
    url: "https://shows.acast.com/doag-voices-arbeitstitel",
    icon: FaMicrophone,
    color: "#000000",
  },
];
---

<div class="row justify-center">
  <div class="col-12">
    <div class="glass rounded-2xl p-6 lg:p-10">
      {/* Section Header */}
      <div class="mb-8 text-center">
        <h2
          class="text-txt-h dark:text-darkmode-txt-h mb-3 text-2xl font-bold lg:text-3xl"
        >
          üéôÔ∏è Podcast Host
        </h2>
        <p
          class="mx-auto max-w-2xl text-txt-p opacity-80 dark:text-darkmode-txt-p"
        >
          DOAG VOICES ‚Äì Einzigartige Stimmen aus der Welt der IT
        </p>
      </div>

      {/* Content Grid */}
      <div class="flex flex-col items-center gap-8 lg:flex-row">
        {/* Podcast Image */}
        <div class="flex w-full justify-center lg:w-1/3">
          <div class="relative">
            <div
              class="absolute -inset-2 rounded-2xl bg-gradient-to-r from-amber-500 via-orange-500 to-red-500 opacity-50 blur-lg"
            >
            </div>
            <Image
              src={podcastImage}
              alt="DOAG VOICES Podcast"
              width={300}
              height={300}
              class="relative rounded-2xl border-2 border-white/20 shadow-2xl"
            />
          </div>
        </div>

        {/* Podcast Info */}
        <div class="w-full lg:w-2/3">
          <h3
            class="text-txt-h dark:text-darkmode-txt-h mb-4 text-xl font-bold lg:text-2xl"
          >
            DOAG VOICES
          </h3>
          <p
            class="mb-6 text-base leading-relaxed text-txt-p dark:text-darkmode-txt-p lg:text-lg"
          >
            Als Host bei DOAG VOICES f√ºhre ich spannende Gespr√§che mit
            Expert:innen aus der IT-Welt. Der Podcast der DOAG bringt
            Fachwissen, Leidenschaft und echte Geschichten aus der Community ans
            Mikro ‚Äì jede Woche neu zu Themen wie Cloud, KI, Softwareentwicklung
            und die Menschen dahinter.
          </p>

          {/* Platform Buttons */}
          <div class="flex flex-wrap gap-2">
            {
              platforms.map((platform) => {
                const IconComponent = platform.icon;
                return (
                  <a
                    href={platform.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 rounded px-2.5 py-0.5 text-sm text-white transition-opacity hover:opacity-80"
                    style={{ backgroundColor: platform.color }}
                    aria-label={`${platform.name} - DOAG VOICES`}
                  >
                    <IconComponent className="text-white" />
                    <span>{platform.name}</span>
                  </a>
                );
              })
            }
          </div>
          <p
            class="mt-3 text-sm italic text-txt-p opacity-70 dark:text-darkmode-txt-p"
          >
            Vergesst nicht, ein Like dazulassen.
          </p>

          {/* Link to DOAG Page */}
          <div class="mt-8">
            <a
              href="/aboutme/doag"
              class="inline-flex items-center gap-2 rounded-xl bg-gradient-to-r from-amber-500 to-orange-500 px-6 py-3 font-medium text-white transition-all duration-300 hover:scale-105 hover:from-amber-600 hover:to-orange-600 hover:shadow-lg"
            >
              Mehr √ºber meine DOAG Aktivit√§ten
              <FaArrowRight className="text-sm" />
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
