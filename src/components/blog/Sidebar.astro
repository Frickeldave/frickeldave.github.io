---
import { lowerHumanize, upperHumanize } from "@lib/textConverter";
import { FaRegFolder, FaHashtag } from "react-icons/fa";
import { ScrollArea } from "@components/common/shortcodes/ScrollArea";

interface Props {
  tags: string[];
  categories: string[];
  allCategories: string[];
}

const { tags, categories, allCategories }: Props = Astro.props;
---

<ScrollArea className="h-full" client:only="react">
  <!-- categories -->
  <div
    class="glass m-2 mb-4 rounded-lg p-4 opacity-0 intersect:animate-fadeLeft"
  >
    <div>
      <h4 class="mb-2">
        <a href="/blog/categories">
          <FaRegFolder
            className={"-mt-1.5 mr-1 inline-block text-purple-500"}
          />
          Categories
        </a>
      </h4>
      <hr class="-mt-1 mb-2" />
      <ul class="space-y-2">
        {
          categories.map((category) => {
            const count = allCategories.filter((c) => c === category).length;
            return (
              <li>
                <a
                  class="glass-t block w-full rounded-lg px-3 py-1.5 text-left text-sm transition-all hover:bg-white/20"
                  href={`/blog/categories/${category}`}
                >
                  {upperHumanize(category)}{" "}
                  <span class="opacity-60">({count})</span>
                </a>
              </li>
            );
          })
        }
      </ul>
    </div>
  </div>
  <!-- tags -->
  <div class="glass m-2 rounded-lg p-4 opacity-0 intersect:animate-fadeLeft">
    <div>
      <h4 class="mb-2">
        <a href="/blog/tags">
          <FaHashtag className={"-mt-1.5 mr-1 inline-block text-purple-500"} />
          Tags
        </a>
      </h4>
      <hr class="-mt-1 mb-2" />
      <div class="flex flex-wrap gap-2">
        {
          tags.map((tag: string) => {
            return (
              <a
                class="glass-t rounded-lg px-2 py-1 text-xs transition-all hover:bg-white/20"
                href={`/blog/tags/${lowerHumanize(tag)}`}
              >
                {tag}
              </a>
            );
          })
        }
      </div>
    </div>
  </div>
</ScrollArea>
