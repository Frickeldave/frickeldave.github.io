---
import { lowerHumanize, upperHumanize } from "@lib/textConverter";
import { FaRegFolder, FaHashtag } from "react-icons/fa";
import { ScrollArea } from "@components/common/shortcodes/ScrollArea";

interface Props {
  tags: string[];
  categories: string[];
  allCategories: string[];
}

const { tags, categories, allCategories }: Props = Astro.props;
---

<ScrollArea className="h-full" client:only="react">
  <!-- categories -->
  <div
    class="glass rounded-lg p-4 m-2 mb-4 intersect:animate-fadeLeft opacity-0"
  >
    <div>
      <h4 class="mb-2">
        <a href="/blog/categories">
          <FaRegFolder
            className={"mr-1 -mt-1.5 inline-block text-purple-500"}
          />
           Categories
        </a>
      </h4>
      <hr class="mb-2 -mt-1" />
      <ul class="space-y-2">
        {
          categories.map((category) => {
            const count = allCategories.filter((c) => c === category).length;
            return (
              <li>
                <a
                  class="block w-full text-left px-3 py-1.5 rounded-lg glass-t hover:bg-white/20 transition-all text-sm"
                  href={`/blog/categories/${category}`}
                >
                  {upperHumanize(category)}{" "}
                  <span class="opacity-60">({count})</span>
                </a>
              </li>
            );
          })
        }
      </ul>
    </div>
  </div>
  <!-- tags -->
  <div class="glass rounded-lg p-4 m-2 intersect:animate-fadeLeft opacity-0">
    <div>
      <h4 class="mb-2">
        <a href="/blog/tags">
          <FaHashtag className={"mr-1 -mt-1.5 inline-block text-purple-500"} />
           Tags
        </a>
      </h4>
      <hr class="mb-2 -mt-1" />
      <div class="flex flex-wrap gap-2">
        {
          tags.map((tag: string) => {
            return (
              <a
                class="px-2 py-1 rounded-lg glass-t text-xs hover:bg-white/20 transition-all"
                href={`/blog/tags/${lowerHumanize(tag)}`}
              >
                {tag}
              </a>
            );
          })
        }
      </div>
    </div>
  </div>
</ScrollArea>
