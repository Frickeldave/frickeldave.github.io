---
import { ScrollArea } from "@components/common/shortcodes/ScrollArea";
import { FaFilter, FaSort, FaHashtag } from "react-icons/fa";

interface Props {
  categories: string[];
  allTags: string[];
  totalProducts: number;
}

const { categories, allTags, totalProducts } = Astro.props;
---

<ScrollArea className="h-full w-full" client:only="react">
  <!-- Results Count -->
  <div
    class="glass m-2 mb-4 rounded-lg p-4 opacity-0 intersect:animate-fadeLeft"
  >
    <div class="text-sm opacity-80" id="results-count">
      {totalProducts} von {totalProducts} Produkten
    </div>
  </div>

  <!-- Search -->
  <div
    class="glass m-2 mb-4 rounded-lg p-4 opacity-0 intersect:animate-fadeLeft"
  >
    <div>
      <h4 class="mb-2">
        <FaFilter className={"-mt-1.5 mr-1 inline-block text-cyan-500"} />
        Suche
      </h4>
      <hr class="-mt-1 mb-2 border-cyan-500/30" />
      <input
        type="text"
        id="search-input"
        placeholder="Suche nach Produkten..."
        class="w-full rounded-lg border border-cyan-500/20 bg-white/10 px-3 py-2 text-sm transition-colors focus:border-cyan-500/60 focus:outline-none"
      />
    </div>
  </div>

  <!-- Categories -->
  <div
    class="glass m-2 mb-4 rounded-lg p-4 opacity-0 intersect:animate-fadeLeft"
  >
    <div>
      <h4 class="mb-2">
        <FaFilter className={"-mt-1.5 mr-1 inline-block text-cyan-500"} />
        Kategorie
      </h4>
      <hr class="-mt-1 mb-2 border-cyan-500/30" />
      <ul class="space-y-2" id="category-filters">
        {
          categories.map((category) => (
            <li>
              <button
                class="category-filter glass-t w-full rounded-lg px-3 py-1.5 text-left text-sm transition-all hover:bg-white/20"
                data-category={category}
              >
                {category}
              </button>
            </li>
          ))
        }
      </ul>
    </div>
  </div>

  <!-- Tags -->
  <div
    class="glass m-2 mb-4 rounded-lg p-4 opacity-0 intersect:animate-fadeLeft"
  >
    <div>
      <h4 class="mb-2">
        <FaHashtag className={"-mt-1.5 mr-1 inline-block text-cyan-500"} />
        Tags
      </h4>
      <hr class="-mt-1 mb-2 border-cyan-500/30" />
      <div class="flex flex-wrap gap-2" id="tag-filters">
        {
          allTags.map((tag) => (
            <button
              class="tag-filter glass-t rounded-lg px-2 py-1 text-xs transition-all hover:bg-white/20"
              data-tag={tag}
            >
              {tag}
            </button>
          ))
        }
      </div>
    </div>
  </div>

  <!-- Customizable Filter -->
  <div
    class="glass m-2 mb-4 rounded-lg p-4 opacity-0 intersect:animate-fadeLeft"
  >
    <div>
      <h4 class="mb-2">
        <FaFilter className={"-mt-1.5 mr-1 inline-block text-cyan-500"} />
        Eigenschaften
      </h4>
      <hr class="-mt-1 mb-2 border-cyan-500/30" />
      <label class="flex cursor-pointer items-center gap-2">
        <input
          type="checkbox"
          id="customizable-filter"
          class="h-4 w-4 cursor-pointer rounded border-white/20 bg-white/10 checked:bg-blue-500 focus:ring-2 focus:ring-blue-400"
        />
        <span class="flex items-center gap-1 text-sm">
          <span class="text-base">✨</span>
          Nur Personalisierbare
        </span>
      </label>
    </div>
  </div>

  <!-- Sort -->
  <div
    class="glass m-2 mb-4 rounded-lg p-4 opacity-0 intersect:animate-fadeLeft"
  >
    <div>
      <h4 class="mb-2">
        <FaSort className={"-mt-1.5 mr-1 inline-block text-cyan-500"} />
        Sortierung
      </h4>
      <hr class="-mt-1 mb-2 border-cyan-500/30" />
      <select
        id="sort-select"
        class="w-full rounded-lg border border-white/20 bg-white/10 px-3 py-2 text-sm transition-colors focus:border-white/40 focus:outline-none dark:bg-gray-800 dark:text-white dark:[&>option]:bg-gray-800 dark:[&>option]:text-white"
      >
        <option value="name-asc">Name (A-Z)</option>
        <option value="name-desc">Name (Z-A)</option>
        <option value="price-asc">Preis (aufsteigend)</option>
        <option value="price-desc">Preis (absteigend)</option>
      </select>
    </div>
  </div>

  <!-- Clear Filters -->
  <div class="glass m-2 rounded-lg p-4 opacity-0 intersect:animate-fadeLeft">
    <button
      id="clear-filters"
      class="w-full rounded-lg bg-gradient-to-r from-cyan-500 to-teal-500 px-3 py-2 text-sm font-medium text-white transition-all duration-300 hover:scale-105 hover:from-cyan-600 hover:to-teal-600"
    >
      Filter zurücksetzen
    </button>
  </div>
</ScrollArea>
