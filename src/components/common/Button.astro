---
interface Props {
  label: string;
  link?: string;
  newtab?: boolean;
  type?: "primary" | "secondary";
  color?: string;
  colorScheme?: "cyan" | "purple" | "green" | "amber" | "red";
  glass?: boolean;
}

const {
  label,
  link,
  newtab = false,
  type = "primary",
  color,
  colorScheme = "cyan",
  glass = false,
}: Props = Astro.props;

// Define gradient classes based on color scheme
const gradientClasses = {
  cyan: "from-cyan-500 to-teal-500 hover:from-cyan-600 hover:to-teal-600",
  purple:
    "from-purple-500 to-violet-500 hover:from-purple-600 hover:to-violet-600",
  green: "from-green-500 to-lime-500 hover:from-green-600 hover:to-lime-600",
  amber:
    "from-amber-500 to-orange-500 hover:from-amber-600 hover:to-orange-600",
  red: "from-red-500 to-pink-500 hover:from-red-600 hover:to-pink-600",
};

const gradientClass =
  color || `bg-gradient-to-r ${gradientClasses[colorScheme]}`;
---

{
  glass ? (
    <a
      href={link}
      target={`${newtab ? "_blank" : ""}`}
      class={`inline-block no-underline hover:opacity-100 ${type == "primary" ? "" : "opacity-0 intersect:animate-fade"}`}
    >
      <div
        class={`glass-t hover:bg-opacity-20 hover:backdrop-blur-none ${type == "primary" ? "rounded-md px-4 py-2 font-bold opacity-0 intersect:animate-fade" : "rounded-sm px-2 py-0.5 text-txt-light dark:text-darkmode-txt-light"}`}
      >
        {label}
      </div>
    </a>
  ) : (
    <a
      href={link}
      target={`${newtab ? "_blank" : ""}`}
      class={`inline-block no-underline opacity-0 intersect:animate-fadeLeft`}
    >
      <div
        class={`${gradientClass} font-bold text-white transition-all duration-300 hover:scale-105 ${type == "primary" ? "rounded-md px-4 py-2" : "rounded-sm px-2 py-0.5 text-sm"}`}
      >
        {label}
      </div>
    </a>
  )
}
