---
import { ScrollArea } from "@components/common/shortcodes/ScrollArea";
import { FaFilter, FaCalendarAlt } from "react-icons/fa";

interface Props {
  years: number[];
  totalNews: number;
}

const { years, totalNews } = Astro.props;
---

<ScrollArea className="h-full w-full" client:only="react">
  <!-- Results Count -->
  <div
    class="glass rounded-lg p-4 m-2 mb-4 intersect:animate-fadeLeft opacity-0"
  >
    <div class="text-sm opacity-80" id="results-count">
      {totalNews} von {totalNews} News
    </div>
  </div>

  <!-- Search -->
  <div
    class="glass rounded-lg p-4 m-2 mb-4 intersect:animate-fadeLeft opacity-0"
  >
    <div>
      <h4 class="mb-2">
        <FaFilter className={"mr-1 -mt-1.5 inline-block text-red-500"} />
         Suche
      </h4>
      <hr class="mb-2 -mt-1 border-red-500/30" />
      <input
        type="text"
        id="search-input"
        placeholder="Suche nach News..."
        class="w-full px-3 py-2 rounded-lg bg-white/10 border border-red-500/20 focus:border-red-500/60 focus:outline-none transition-colors text-sm"
      />
    </div>
  </div>

  <!-- Year Filter -->
  <div
    class="glass rounded-lg p-4 m-2 mb-4 intersect:animate-fadeLeft opacity-0"
  >
    <div>
      <h4 class="mb-2">
        <FaCalendarAlt className={"mr-1 -mt-1.5 inline-block text-red-500"} />
         Jahr
      </h4>
      <hr class="mb-2 -mt-1 border-red-500/30" />
      <ul class="space-y-2" id="year-filters">
        {
          years.map((year) => (
            <li>
              <button
                class="year-filter w-full text-left px-3 py-1.5 rounded-lg bg-white/10 hover:bg-red-500/20 border border-red-500/20 hover:border-red-500/40 transition-all text-sm"
                data-year={year}
              >
                {year}
              </button>
            </li>
          ))
        }
      </ul>
    </div>
  </div>

  <!-- Clear Filters -->
  <div
    class="glass rounded-lg p-4 m-2 mb-4 intersect:animate-fadeLeft opacity-0"
  >
    <button
      id="clear-filters"
      class="w-full px-4 py-2 bg-gradient-to-r from-red-500 to-pink-500 hover:from-red-600 hover:to-pink-600 text-white font-medium rounded-lg text-sm transition-all duration-300 hover:scale-105"
    >
      Filter zur√ºcksetzen
    </button>
  </div>
</ScrollArea>
