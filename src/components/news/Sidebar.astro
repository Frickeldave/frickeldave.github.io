---
import { ScrollArea } from "@components/common/shortcodes/ScrollArea";
import { FaFilter, FaCalendarAlt } from "react-icons/fa";

interface Props {
  years: number[];
  totalNews: number;
}

const { years, totalNews } = Astro.props;
---

<ScrollArea className="h-full w-full" client:only="react">
  <!-- Results Count -->
  <div
    class="glass m-2 mb-4 rounded-lg p-4 opacity-0 intersect:animate-fadeLeft"
  >
    <div class="text-sm opacity-80" id="results-count">
      {totalNews} von {totalNews} News
    </div>
  </div>

  <!-- Search -->
  <div
    class="glass m-2 mb-4 rounded-lg p-4 opacity-0 intersect:animate-fadeLeft"
  >
    <div>
      <h4 class="mb-2">
        <FaFilter className={"-mt-1.5 mr-1 inline-block text-red-500"} />
        Suche
      </h4>
      <hr class="-mt-1 mb-2 border-red-500/30" />
      <input
        type="text"
        id="search-input"
        placeholder="Suche nach News..."
        class="w-full rounded-lg border border-red-500/20 bg-white/10 px-3 py-2 text-sm transition-colors focus:border-red-500/60 focus:outline-none"
      />
    </div>
  </div>

  <!-- Year Filter -->
  <div
    class="glass m-2 mb-4 rounded-lg p-4 opacity-0 intersect:animate-fadeLeft"
  >
    <div>
      <h4 class="mb-2">
        <FaCalendarAlt className={"-mt-1.5 mr-1 inline-block text-red-500"} />
        Jahr
      </h4>
      <hr class="-mt-1 mb-2 border-red-500/30" />
      <ul class="space-y-2" id="year-filters">
        {
          years.map((year) => (
            <li>
              <button
                class="year-filter w-full rounded-lg border border-red-500/20 bg-white/10 px-3 py-1.5 text-left text-sm transition-all hover:border-red-500/40 hover:bg-red-500/20"
                data-year={year}
              >
                {year}
              </button>
            </li>
          ))
        }
      </ul>
    </div>
  </div>

  <!-- Clear Filters -->
  <div
    class="glass m-2 mb-4 rounded-lg p-4 opacity-0 intersect:animate-fadeLeft"
  >
    <button
      id="clear-filters"
      class="w-full rounded-lg bg-gradient-to-r from-red-500 to-pink-500 px-4 py-2 text-sm font-medium text-white transition-all duration-300 hover:scale-105 hover:from-red-600 hover:to-pink-600"
    >
      Filter zur√ºcksetzen
    </button>
  </div>
</ScrollArea>
