---
import type { AboutMeEntry } from "@/types";
import AboutMeLayout from "@components/aboutme/AboutMeLayout.astro";
import { getIndex } from "@lib/contentParser";

const entry = (await getIndex("aboutme")) as AboutMeEntry;
const { projects } = entry.data;

const title = "Projekte";
const description = "Meine Projekte und technische Arbeiten";

const toc = (projects || []).map((project: any, index: number) => ({
  text: project.title,
  slug: `project-${index}`,
  depth: 2,
}));
---

<AboutMeLayout title={title} description={description} toc={toc}>
  <div class="glass mb-6 rounded-lg p-6 lg:p-8">
    <h1
      class="text-txt-h dark:text-darkmode-txt-h mb-4 text-3xl font-bold lg:text-4xl"
    >
      Projekte
    </h1>
    <p class="text-txt-p dark:text-darkmode-txt-p">
      Meine Projekte und technische Arbeiten werden hier pr√§sentiert.
    </p>
  </div>

  <div class="space-y-12">
    {
      projects && (
        <section id="it-projects">
          <div class="grid gap-6">
            {projects.map((project: any, index: number) => (
              <div
                id={`project-${index}`}
                class="glass scroll-mt-24 rounded-lg p-6"
              >
                <div class="mb-2 flex items-start justify-between">
                  <h3 class="text-xl font-bold">{project.title}</h3>
                  {project.status && (
                    <span class="rounded-full border border-black/10 bg-amber-500 px-3 py-1 text-xs font-bold text-black">
                      {project.status}
                    </span>
                  )}
                </div>
                <p class="mb-4 text-txt-p dark:text-darkmode-txt-p">
                  {project.description}
                </p>

                {project.technologies && (
                  <div class="mb-4 flex flex-wrap gap-2">
                    {project.technologies.map((tech: string) => (
                      <span class="rounded border border-amber-500/50 bg-amber-500/10 px-2 py-1 text-xs font-bold text-black">
                        {tech}
                      </span>
                    ))}
                  </div>
                )}

                <div class="flex gap-4">
                  {project.demo && (
                    <a
                      href={project.demo}
                      target="_blank"
                      class="font-medium text-amber-600 hover:text-amber-700"
                    >
                      Demo &rarr;
                    </a>
                  )}
                  {project.github && (
                    <a
                      href={project.github}
                      target="_blank"
                      class="font-medium text-amber-600 hover:text-amber-700"
                    >
                      GitHub &rarr;
                    </a>
                  )}
                </div>
              </div>
            ))}
          </div>
        </section>
      )
    }
  </div>
</AboutMeLayout>
