---
import AboutMeLayout from "@components/aboutme/AboutMeLayout.astro";

const title = "Talks";
const description = "Meine Talks und Präsentationen auf Konferenzen und Events";
---

<AboutMeLayout title={title} description={description}>
  <div class="glass mb-6 rounded-lg p-6 lg:p-8">
    <h1
      class="text-txt-h dark:text-darkmode-txt-h mb-6 text-3xl font-bold lg:text-4xl"
    >
      Talks
    </h1>
    <p class="text-txt-p dark:text-darkmode-txt-p">
      Meine Talks und Präsentationen auf Konferenzen und Events.
    </p>
  </div>

  <div class="glass rounded-lg p-6 lg:p-8">
    <p class="text-txt-p dark:text-darkmode-txt-p">(Content coming soon)</p>
  </div>
</AboutMeLayout>
