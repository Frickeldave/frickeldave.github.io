---
import type { PortfolioEntry } from "@/types";
import AboutMeLayout from "@components/aboutme/AboutMeLayout.astro";
import { getIndex } from "@lib/contentParser";

const entry = (await getIndex("aboutme")) as PortfolioEntry;
const { title, description, intro } = entry.data;

const introTitle = typeof intro === "object" ? intro.title : title;
const introContent = typeof intro === "object" ? intro.content : intro || description;
---

<AboutMeLayout title={title} description={description}>
  <div class="glass rounded-lg p-6 lg:p-8">
     <h1 class="text-txt-h dark:text-darkmode-txt-h mb-4 text-3xl font-bold lg:text-4xl">
        {introTitle}
      </h1>
      <div class="prose prose-lg max-w-none text-txt-p dark:text-darkmode-txt-p">
        <p>{introContent}</p>
      </div>
  </div>
</AboutMeLayout>
